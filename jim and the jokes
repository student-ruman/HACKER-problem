#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

typedef long long ll;


int compare(const void *a,const void *b)
{
  return (*(ll*)a-*(ll*)b);
}
 

int main() {
    ll n,m,b,t,i,j,inv,val,mul,ans,cnt;
    ll a[100005];
    scanf("%lld",&n);
    j=0;
    ans=0;
    for(i=0;i<n;i++)
        {
        inv=0;
        val=0;
        scanf("%lld%lld",&b,&m);
        mul=1;
        while(m>0&&inv==0)
            {
            t=m%10;
            m=m/10;
            if(t>=b)
                {
                inv=1;
            }
            else
                {
                val=val+t*mul;
                mul=mul*b;
            }
        }
        if(inv==0)
            {
            a[j]=val;
            j++;
        }
    }
    qsort(a,j,sizeof(ll),compare);
    cnt=1;
    for(i=0;i+1<j;i++)
        {
        if(a[i]==a[i+1])
            {
            cnt++;
        }
        else
            {
            ans=ans+(cnt*(cnt-1))/2;
            cnt=1;
        }
    }
    ans=ans+(cnt*(cnt-1))/2;
    printf("%lld\n",ans);
    return 0;
}
